                </li>

            </ul>
            <!--
            <hr>

            <div class="gallery">
                <img src="\img/boxen1.jpg">
                <img src="\img/boxen2.jpg">
                <img src="\img/boxen3.jpg">
            </div>
            -->
            <hr>

            <form method="post">

                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                <div class="container login-container">
                    <div class="login-form-1">
                        <h3>Inloggen</h3>
                        <div class="form-group">
                            <input type="email" class="form-control" name="email"  id="email" placeholder="Vul Je Email In *" required autofocus>
                        </div>
                        <div class="form-group">
                            <input type="password" class="form-control" name="password" id="password" placeholder="Vul Je Wachtwoord In *" required />
                        </div>
                        <div class="form-group">
                            <input type="submit" class="btn btn-success" value="Login" />
                        </div>
                        <div class="form-group">
                            <a href="#" class="btnForgetPwd">Wachtwoord Vergeten?</a>
                        </div>
                    </div>
                </div>
            </form>

            <style>
                .login-container{
                    margin: auto;
                    width: 40%;
                }
                .login-logo{
                    position: relative;
                }
                .login-logo img{
                    position: absolute;
                    width: 20%;
                    margin-top: 19%;
                    background: #282726;
                    border-radius: 4.5rem;
                    padding: 5%;
                }
                .login-form-1{
                    padding: 9%;
                    /*background:#282726;*/
                    box-shadow: 0 5px 8px 0 rgba(0, 0, 0, 0.2), 0 9px 26px 0 rgba(0, 0, 0, 0.19);
                }
                .login-form-1 h3{
                    text-align: center;
                    margin-bottom:12%;
                    color:#8B0000;
                }
            </style>
        {% endblock %}
